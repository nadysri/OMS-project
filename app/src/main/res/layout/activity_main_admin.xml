<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.MainActivityAdmin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/bgborder"
                android:elevation="30dp">

                <ImageView
                    android:id="@+id/userpic"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/logo" />


                <TextView
                    android:id="@+id/name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/userpic"
                    android:textColor="#3A3A3A"
                    android:textSize="16sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.google.android.material.button.MaterialButton
                    android:layout_width="380dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:background="@color/black"
                    android:drawableLeft="@drawable/ic_outline_monetization_on_24"
                    android:drawableTint="@color/black"
                    android:gravity="center"
                    android:hapticFeedbackEnabled="true"
                    android:text="SALES\nRM300"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:iconGravity="textStart"
                    app:iconTint="@color/black"
                    app:strokeColor="@color/black" />


                <com.google.android.material.button.MaterialButton
                    android:layout_width="380dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="22dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:background="@drawable/button"
                    android:drawableRight="@drawable/ic_baseline_navigate_next_24"
                    android:drawableTint="@color/black"
                    android:gravity="start|center_vertical"
                    android:hapticFeedbackEnabled="true"
                    android:text="Orders Total\n 180"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:iconGravity="textEnd"
                    app:iconPadding="10dp"
                    app:iconTint="@color/black"
                    app:strokeColor="@color/black" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/dslistbtn"
                    android:layout_width="380dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button"
                    android:drawableRight="@drawable/ic_baseline_navigate_next_24"
                    android:drawableTint="@color/black"
                    android:gravity="start|center_vertical"
                    android:hapticFeedbackEnabled="true"
                    android:text="Dropship total \n 10"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:iconGravity="textStart"
                    app:iconPadding="10dp"
                    app:iconTint="@color/black" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>