<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Leaderboard">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/toolBarRl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rect01"
                android:padding="10dp">

                <ImageButton
                    android:id="@+id/backBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:src="@drawable/ic_back_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="RANKING"
                    android:textColor="#704804"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="#704804"
                android:text="Dropship Monthly Ranking"
                android:textSize="16dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/month"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#834E00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JANUARY 2022"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                android:elevation="100dp"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="50dp"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:background="#F6F1C0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">


                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/dsimg"
                            android:layout_gravity="center_vertical"
                            android:layout_width="80dp"
                            android:layout_height="90dp"
                            android:src="@drawable/one"/>

                        <TextView
                            android:id="@+id/nameds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="username"
                            android:textStyle="bold"
                            android:layout_marginLeft="35dp"
                            android:textSize="17sp"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/totalsale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RM2300"
                            android:textStyle="bold"
                            android:gravity="right"
                            android:layout_marginLeft="100dp"
                            android:textSize="17sp"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <!--card 2 -->

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="50dp"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/dsimg2"
                            android:layout_gravity="center_vertical"
                            android:layout_width="80dp"
                            android:layout_height="90dp"
                            android:src="@drawable/two"/>

                        <TextView
                            android:id="@+id/nameds2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="username"
                            android:textStyle="bold"
                            android:layout_marginLeft="35dp"
                            android:textSize="17sp"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/totalsale2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RM2300"
                            android:textStyle="bold"
                            android:layout_marginLeft="100dp"
                            android:textSize="17sp"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <!--card 3 -->

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="50dp"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/dsimg3"
                            android:layout_gravity="center_vertical"
                            android:layout_width="80dp"
                            android:layout_height="90dp"
                            android:src="@drawable/three"/>

                        <TextView
                            android:id="@+id/nameds3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="username"
                            android:textStyle="bold"
                            android:layout_marginLeft="35dp"
                            android:textSize="17sp"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/totalsale3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RM2300"
                            android:textStyle="bold"
                            android:layout_marginLeft="100dp"
                            android:textSize="17sp"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <!--card 4 -->

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="50dp"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/dsimg4"
                            android:layout_gravity="center_vertical"
                            android:layout_width="80dp"
                            android:layout_height="90dp"
                            android:src="@drawable/four"/>

                        <TextView
                            android:id="@+id/nameds4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="username"
                            android:textStyle="bold"
                            android:layout_marginLeft="35dp"
                            android:textSize="17sp"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/totalsale4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RM2300"
                            android:textStyle="bold"
                            android:layout_marginLeft="100dp"
                            android:textSize="17sp"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <!--card 5 -->

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="50dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/dsimg5"
                            android:layout_gravity="center_vertical"
                            android:layout_width="80dp"
                            android:layout_height="90dp"
                            android:src="@drawable/five"/>

                        <TextView
                            android:id="@+id/nameds5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="username"
                            android:textStyle="bold"
                            android:layout_marginLeft="35dp"
                            android:textSize="17sp"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/totalsale5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RM2300"
                            android:textStyle="bold"
                            android:layout_marginLeft="100dp"
                            android:textSize="17sp"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</LinearLayout>